extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center EDITAR LABORATORIO ID: #{lab.idLab}
        .container
            form.form(action="?_method=PUT" method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="nombre") NOMBRE:
                            input.form-control(type="text" name="nombre" id="nombre" value=`${lab.nombre}` required)
                        .form-group
                            label(for="pais") PAIS:
                            input.form-control(type="text" name="pais" id="pais" value=`${lab.pais}` required)
                        .form-group
                            label(for="provincia") PROVINCIA:
                            input.form-control(type="text" name="provincia" id="provincia" value=`${lab.provincia}` required)
                    .col-md-5
                        .form-group
                            label(for="email") EMAIL:
                            input.form-control(type="email" name="email" id="email" value=`${lab.email}` required)
                        .form-group
                            label(for="telefono") TELEFONO:
                            input.form-control(type="number" name="telefono" id="telefono" value=`${lab.telefono}` required)
                        .form-group
                            label(for="direccion") DIRECCION:
                            input.form-control(type="text" name="direccion" id="direccion" value=`${lab.direccion}` required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")