extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center AÑADIR NUEVO LABORATORIO
        .container
            form.form(action="alta" method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="nombre") NOMBRE:
                            input.form-control(type="text" name="nombre" id="nombre" placeholder="Ingresar Nombre" required)
                        .form-group
                            label(for="pais") PAIS:
                            input.form-control(type="text" name="pais" id="pais" placeholder="Ingresar Pais" required)
                        .form-group
                            label(for="provincia") PROVINCIA:
                            input.form-control(type="text" name="provincia" id="provincia" placeholder="Ingresar Provincia" required)
                    .col-md-5
                        .form-group
                            label(for="email") EMAIL:
                            input.form-control(type="email" name="email" id="email" placeholder="Ingresar Email" required)
                        .form-group
                            label(for="telefono") TELEFONO:
                            input.form-control(type="number" name="telefono" id="telefono" placeholder="Ingresar Numero de Telefono" required)
                        .form-group
                            label(for="direccion") DIRECCION:
                            input.form-control(type="text" name="direccion" id="direccion" placeholder="Ingresar Direccion" required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")