extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/depositoNacional")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h4 Listar vacunas compradas por rango de fechas:
    table.table#tabla
        thead
            tr
                th LABORATORIO
                th CANTIDAD DE VACUNAS
                th ENTRE RANGO DE FECHAS
                th OPCIONES
        tbody
            each lis in listaLabs
                tr
                    td= lis.LoteProveedor.Laboratorio.nombre
                    td= lis.cantidadDeVacunas
                    td= rango
                    td(style="display: flex;")
                        form(action=`/depositoNacional/vacunasCompradas/consultar/${lis.LoteProveedor.Laboratorio.idLab}`, method="post")
                            label(for="fechaInicio")
                            input.form-control(type="date" name="fechaInicio" id="fechaInicio" value=`${fechaInicio}` hidden)
                            label(for="fechaFin")
                            input.form-control(type="date" name="fechaFin" id="fechaFin" value=`${fechaFin}` hidden)
                            input.btn.btn-primary(type="submit", value="Consultar")