extends ../layout.pug

block content
    if rol == "Administrador"
        .contenedorVolverCrear
            a.link(href="/")
                | Volver Atr치s
                img(src='/images/volver.png', alt="Flecha hacia atr치s")
        h4(style="margin:20px;") LISTA DE DEPOSITOS NACIONALES
        table.table#tabla
            thead
                tr
                    th NOMBRE
                    th PROVINCIA
                    th LOCALIDAD
                    th DIRECCION
                    th OPCIONES
            tbody
                each depo in depositoNacional 
                    tr
                        td= depo.nombre
                        td= depo.provincia
                        td= depo.localidad
                        td= depo.direccion
                        td(style="display: flex;")
                            form(action=`/depositoNacional/editar/${depo.idDepNac}`, method="get")
                                    input.btn.btn-primary(type="submit", value="Editar")
    else 
        .contenedorVolverCrear
            a.link(href="/")
                | Volver Atr치s
                img(src='/images/volver.png', alt="Flecha hacia atr치s")
        .consulta
            h1 DEPOSITO NACIONAL:
            .contenido
                h4(style="text-align: center;") INFORMACION:
                ul 
                    li NOMBRE: #{depositoNacional.nombre}:
                    li PROVINCIA: #{depositoNacional.provincia}
                    li LOCALIDAD: #{depositoNacional.localidad}
                    li DIRECCION: #{depositoNacional.direccion}
                    li(style="list-style: none; display: flex; justify-content: flex-end; margin-top:5px;") 
                        form(action=`/depositoNacional/stock/${depositoNacional.idDepNac}`, method="get")
                            input.btn.btn-primary(type="submit", value="Consultar Stock")
                        