extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
        h5
            form(action=`/depositoNacional/crear`, method="get")
                input(type="submit", value="Añadir Nuevo Deposito Nacional")
    table.table#tabla
        thead
            tr
                th ID
                th NOMBRE
                th PROVINCIA
                th LOCALIDAD
                th DIRECCION
                th OPCIONES
        tbody
            each depNac in listaDeDepositosNacionales
                tr
                    td= depNac.idDepNac
                    td= depNac.nombre
                    td= depNac.provincia
                    td= depNac.localidad
                    td= depNac.direccion
                    td(style="display: flex;")
                        form(action=`/depositoNacional/editar/${depNac.idDepNac}`, method="get")
                            input.btn.btn-primary(type="submit", value="Editar")
                        form(action=`/depositoNacional/eliminar/${depNac.idDepNac}?_method=DELETE`, method="post")
                            input.btn.btn-danger(type="submit", value="Borrar")
