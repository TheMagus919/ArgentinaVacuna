extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/traslado")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h2 LISTA DE SOLICITUDES EN PROCESO:
    table.table#tabla
        thead
            tr
                th CENTRO DE VACUNACION ENVIA
                th LOTE PROVEEDOR
                th CENTRO DE VACUNACION RECIBE
                th CANTIDAD VACUNAS
                th OPCIONES

        tbody
            each solicitud in solicitudes
                tr
                    td= solicitud.idCentroEnvia+" - "+solicitud.centroEnvia.nombre
                    td= solicitud.LoteProveedor.nroLote+" - "+solicitud.LoteProveedor.nombreComercial
                    td= solicitud.idCentroRecibe+" - "+solicitud.centroRecibe.nombre
                    td= solicitud.cantidadDeVacunas
                    td(style="display: flex;")
                        form(action=`/traslado/consultar/${solicitud.idTraslado}`, method="get")
                                input.btn.btn-primary(type="submit", value="Consultar")