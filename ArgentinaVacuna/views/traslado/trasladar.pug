extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center REGISTRO DE TRASLADO
        .container
            form.form(action="alta" method="post")
                .row.justify-content-between
                    .col-md-6
                        .form-group
                            label(for="idCentroEnvia") CENTRO DE VACUNACION QUE ENVIA:
                            input.form-control(type="text" name="idCentroEnvia" id="idCentroEnvia" value=`${distri.CentroDeVacunacion.idCentro} - ${distri.CentroDeVacunacion.nombre}` readonly)
                        .form-group
                            label(for="nroLote") LOTE:
                            input.form-control(type="text" name="nroLote" id="nroLote" value=`${distri.LoteProveedor.nroLote} - ${distri.LoteProveedor.nombreComercial}` readonly)
                        .form-group
                            label(for="cantidadDeVacunas") CANTIDAD DE VACUNAS:
                            input.form-control(type="number" name="cantidadDeVacunas" id="cantidadDeVacunas" min="1" max=`${distri.cantidadDeVacunas}` placeholder=`Valores entre 1 y ${distri.cantidadDeVacunas}` required)
                    .col-md-6
                        .form-group
                            label(for="idCentroRecibe") CENTRO DE VACUNACION QUE RECIBE:
                            select.form-control(name="idCentroRecibe" id="idCentroRecibe" required)
                                each cen in centros
                                    option(value=`${cen.idCentro}`) #{cen.idCentro}  - #{cen.nombre}
                        .form-group
                            label(for="fechaSalida") FECHA DE SALIDA:
                            input.form-control(type="date" name="fechaSalida" id="fechaSalida" required)
                        .form-group
                            label(for="fechaLlegada") FECHA DE LLEGADA:
                            input.form-control(type="date" name="fechaLlegada" id="fechaLlegada" required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")