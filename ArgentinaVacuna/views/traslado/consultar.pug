extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .consulta
        h1 CONSULTAR TRASLADO ID: #{traslado.idTraslado}.
        .contenido
            h4 CENTRO DE VACUNACION QUE ENVIA:
            ol
                li ID: #{traslado.idCentroEnvia}
                li NOMBRE: #{traslado.centroEnvia.nombre}
                li PROVINCIA: #{traslado.centroEnvia.provincia}
                li LOCALIDAD: #{traslado.centroEnvia.localidad}
                li DIRECCION: #{traslado.centroEnvia.direccion}
        .contenido
            h4 LOTE PROVEEDOR:
            ol 
                li ID: #{traslado.nroLote}
                li NOMBRE COMERCIAL: #{traslado.LoteProveedor.nombreComercial}
                li CANTIDAD DE VACUNAS QUE CONTIENE: #{traslado.LoteProveedor.cantidadDeVacunas}
                li TIPO DE FRASCO: #{traslado.LoteProveedor.tipoDeFrasco}
                li TIPO DE VACUNA: #{traslado.LoteProveedor.TipoVacuna.nombre}
                li LABORATORIO: #{traslado.LoteProveedor.Laboratorio.nombre}
                li FECHA FABRICACION: #{traslado.LoteProveedor.fechaDeFabricacion}
                li FECHA VENCIMIENTO: #{traslado.LoteProveedor.fechaDeVencimiento}
        .contenido  
            h4 CENTRO DE VACUNACION QUE RECIBE: 
            ol
                li ID: #{traslado.idCentroRecibe}
                li NOMBRE: #{traslado.centroRecibe.nombre}
                li PROVINCIA: #{traslado.centroRecibe.provincia}
                li LOCALIDAD: #{traslado.centroRecibe.localidad}
                li DIRECCION: #{traslado.centroRecibe.direccion}
        .contenido 
            h4 CANTIDAD DE VACUNAS QUE SE ENVIAN: #{traslado.cantidadDeVacunas}
            h4 FECHA DE SALIDA: #{traslado.fechaSalida}
            h4 FECHA DE LLEGADA: #{traslado.fechaLlegada}