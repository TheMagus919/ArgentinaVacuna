extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/paciente")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h4 Registro Medico de #{paciente.nombre} #{paciente.apellido}
    table.table#tabla
        thead
            tr
                th NOMBRE
                th TIPO DE VACUNA
                th CENTRO DE VACUNACION
                th FECHA DE APLICACION
        tbody
            each registro in listaRegistro
                tr
                    td= registro.LoteProveedor.nombreComercial
                    td= registro.LoteProveedor.TipoVacuna.nombre
                    td= registro.CentroDeVacunacion.nombre
                    td= registro.fechaDeAplicacion
