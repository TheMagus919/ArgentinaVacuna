extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .consulta
        h1 CONSULTAR LOTE NRO°: #{lote.nroLote}.
        .contenido
            ol 
                li NOMBRE COMERCIAL: #{lote.nombreComercial}
                li CANTIDAD DE VACUNAS: #{lote.cantidadDeVacunas}
                li TIPO DE VACUNA: #{lote.TipoVacuna.nombre}
                li TIPO DE FRASCO: #{lote.tipoDeFrasco}
                li LABORATORIO: #{lote.Laboratorio.nombre}
                li FECHA FABRICACION: #{lote.fechaDeFabricacion}
                li FECHA VENCIMIENTO: #{lote.fechaDeVencimiento}
                if lote.vencidas
                    li VENCIDAS: SI 
                else 
                    li VENCIDAS: NO