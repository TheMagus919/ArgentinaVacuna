extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center AÑADIR NUEVO LOTE PROVEEDOR
        .container
            form.form(action="alta" method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="nroLote") NUMERO DE LOTE:
                            input.form-control(type="number" name="nroLote" id="nroLote" placeholder="Ingresar Numero de Lote" required)
                        .form-group
                            label(for="idLab") LABORATORIO:
                            select.form-control(name="idLab" id="idLab" required)
                                each lab in labs
                                    option(value=`${lab.idLab}`) #{lab.nombre}
                        .form-group
                            label(for="idTipoVacuna") TIPO DE VACUNA:
                            select.form-control(name="idTipoVacuna" id="idTipoVacuna" required)
                                each tip in tipos
                                    option(value=`${tip.idTipoVacuna}`) #{tip.nombre}
                        .form-group
                            label(for="tipoDeFrasco") TIPO DE FRASCO:
                            select.form-control(name="tipoDeFrasco" id="tipoDeFrasco" required)
                                option(value="Monodosis") Monodosis 
                                option(value="Multidosis") Multidosis
                        .form-group
                            label(for="nombreComercial") NOMBRE COMERCIAL:
                            input.form-control(type="text" name="nombreComercial" id="nombreComercial" placeholder="Ingresar Nombre Comercial" required)
                    .col-md-5
                        .form-group
                            label(for="cantidadDeVacunas") CANTIDAD DE VACUNAS:
                            input.form-control(type="number" name="cantidadDeVacunas" id="cantidadDeVacunas" placeholder="Ingresar Cantidad de Vacunas" required)
                        .form-group
                            label(for="fechaDeFabricacion") FECHA DE FABRICACION:
                            input.form-control(type="date" name="fechaDeFabricacion" id="fechaDeFabricacion" required)
                        .form-group
                            label(for="fechaDeVencimiento") FECHA DE VENCIMIENTO:
                            input.form-control(type="date" name="fechaDeVencimiento" id="fechaDeVencimiento" required)
                        .form-group
                            label(for="fechaDeCompra") FECHA DE COMPRA:
                            input.form-control(type="date" name="fechaDeCompra" id="fechaDeCompra" required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")