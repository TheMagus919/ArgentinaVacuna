extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center EDITAR CENTRO DE VACUNACION ID: #{centro.idCentro}
        .container
            form.form(action="?_method=PUT" method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="nombre") NOMBRE:
                            input.form-control(type="text" name="nombre" id="nombre" value=`${centro.nombre}` required)
                        .form-group
                            label(for="provincia") PROVINCIA:
                            input.form-control(type="text" name="provincia" id="provincia" value=`${centro.provincia}` required)
                    .col-md-5
                        .form-group
                            label(for="localidad") LOCALIDAD:
                            input.form-control(type="text" name="localidad" id="localidad" value=`${centro.localidad}` required)
                        .form-group
                            label(for="direccion") DIRECCION:
                            input.form-control(type="text" name="direccion" id="direccion" value=`${centro.direccion}` required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")