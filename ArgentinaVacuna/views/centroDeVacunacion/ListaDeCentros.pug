extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
        h5
            form(action=`/centroDeVacunacion/crear`, method="get")
                input(type="submit", value="Añadir Nuevo Centro de Vacunacion")
    table.table#tabla
        thead
            tr
                th ID
                th NOMBRE
                th PROVINCIA
                th LOCALIDAD
                th DIRECCION
                th OPCIONES
        tbody
            each centro in listaDeCentros
                tr
                    td= centro.idCentro
                    td= centro.nombre
                    td= centro.provincia
                    td= centro.localidad
                    td= centro.direccion
                    td(style="display: flex;")
                        form(action=`/centroDeVacunacion/editar/${centro.idCentro}`, method="get")
                            input.btn.btn-primary(type="submit", value="Editar")
                        form(action=`/centroDeVacunacion/eliminar/${centro.idCentro}?_method=DELETE`, method="post")
                            input.btn.btn-danger(type="submit", value="Borrar")
