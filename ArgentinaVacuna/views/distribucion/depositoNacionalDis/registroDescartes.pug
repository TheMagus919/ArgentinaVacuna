extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/distribucion/distribucionDepoNac")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h2 REGISTRO DE DESCARTES:
    table.table#tabla
        thead
            tr
                th LOTE PROVEEDOR
                th CANTIDAD VACUNAS
                th FORMA DESCARTE 
                th EMPRESA RESPONSABLE
                th MOTIVO
                th FECHA DESCARTE

        tbody
            each descarte in listaDescarte
                tr
                    td= descarte.nroLote+" - "+descarte.LoteProveedor.nombre
                    td= descarte.cantidadDeVacunas
                    td= descarte.formaDescarte
                    td= descarte.empresaResponsable
                    td= descarte.motivo
                    td= descarte.fechaDeDescarte