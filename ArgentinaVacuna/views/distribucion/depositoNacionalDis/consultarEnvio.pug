extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/distribucion/distribucionDepoNac")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .consulta
        h1 INFORMACION DE ENVIO ID: #{envio.idDisDep}.
        .contenido
            h4 DEPOSITO NACIONAL: 
            ol
                li ID: #{envio.idDepNac}
                li NOMBRE: #{envio.DepositoNacional.nombre}
                li PROVINCIA: #{envio.DepositoNacional.provincia}
                li LOCALIDAD: #{envio.DepositoNacional.localidad}
                li DIRECCION: #{envio.DepositoNacional.direccion}
        .contenido
            h4 LOTE PROVEEDOR:
            ol 
                li ID: #{envio.nroLote}
                li NOMBRE COMERCIAL: #{envio.LoteProveedor.nombreComercial}
                li CANTIDAD DE VACUNAS QUE CONTIENE: #{envio.LoteProveedor.cantidadDeVacunas}
                li TIPO DE FRASCO: #{envio.LoteProveedor.tipoDeFrasco}
                li TIPO DE VACUNA: #{envio.LoteProveedor.TipoVacuna.nombre}
                li LABORATORIO: #{envio.LoteProveedor.Laboratorio.nombre}
                li FECHA DE FABRICACION: #{envio.LoteProveedor.fechaDeFabricacion}
                li FECHA DE VENCIMIENTO: #{envio.LoteProveedor.fechaDeVencimiento}
                if envio.LoteProveedor.vencidas
                    li VENCIDAS: SI
        .contenido
            h4 DEPOSITO PROVINCIAL: 
            ol
                li ID: #{envio.idDepProv}
                li NOMBRE: #{envio.DepositoProvincial.nombre}
                li PROVINCIA: #{envio.DepositoProvincial.provincia}
                li LOCALIDAD: #{envio.DepositoProvincial.localidad}
                li DIRECCION: #{envio.DepositoProvincial.direccion}
        .contenido
            h5 CANTIDAD DE VACUNAS: #{envio.cantidadDeVacunas}
            h5 FECHA DE SALIDA: #{envio.fechaDeSalidaDepNac}
            h5 FECHA DE LLEGADA: #{envio.fechaLlegadaDepProv}