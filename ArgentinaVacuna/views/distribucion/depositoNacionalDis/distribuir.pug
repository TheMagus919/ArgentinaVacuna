extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center TRASLADAR VACUNAS A UN DEPOSITO NACIONAL
        .container
            form.form(action="alta" method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="nroLote") LOTE:
                            input.form-control(type="text" name="nroLote" id="nroLote" value=`${lote.nroLote} - ${lote.nombreComercial}` readonly)
                        .form-group
                            label(for="idDepNac") DEPOSITO NACIONAL QUE RECIBE:
                            select.form-control(name="idDepNac" id="idDepNac" required)
                                each dep in depositos
                                    option(value=`${dep.idDepNac}`) #{dep.idDepNac}  - #{dep.nombre}
                    .col-md-6
                        .form-group
                            label(for="fechaDeAdquisicion") FECHA DE ADQUISICION:
                            input.form-control(type="date" name="fechaDeAdquisicion" id="fechaDeAdquisicion" required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")