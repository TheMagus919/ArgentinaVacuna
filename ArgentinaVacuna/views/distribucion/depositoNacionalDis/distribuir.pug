extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center COMPRAR VACUNAS:
        .container
            form.form(action="alta" method="post")
                .row.justify-content-evenly
                    .col-md-5
                        .form-group
                            label(for="nroLote") LOTE:
                            input.form-control(type="text" name="nroLote" id="nroLote" value=`${lote.nroLote} - ${lote.nombreComercial}` readonly)
                        .form-group
                            label(for="idDepNac") DEPOSITO NACIONAL QUE RECIBE:
                            input.form-control(type="text" name="idDepNac" id="idDepNac" value=`${deposito.idDepNac} - ${deposito.nombre}` readonly)
                    .col-md-4
                        .form-group
                            label(for="fechaDeCompra") FECHA DE COMPRA:
                            input.form-control(type="date" name="fechaDeCompra" id="fechaDeCompra" min=`${fechaAntes}` max=`${lote.fechaDeVencimiento}` required)
                        .form-group
                            label(for="")
                            input.form-control.btn.btn-light(type="submit", value="Guardar")