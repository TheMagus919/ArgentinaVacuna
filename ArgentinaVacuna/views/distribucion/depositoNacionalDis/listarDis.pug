extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/distribucion")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
        h5
            form(action=`/distribucion/distribucionDepoNac/lotes`, method="get")
                input(type="submit", value="Añadir Registro Distribucion Deposito Nacional")
    table.table#tabla
        thead
            tr
                th ID
                th LOTE PROVEEDOR
                th DEPOSITO NACIONAL
                th CANTIDAD VACUNAS
                th FECHA DE ADQUISICION
                th OPCIONES

        tbody
            each dis in listaDeDistribucion
                tr
                    td= dis.idTrasladoDep
                    td= dis.LoteProveedor.nroLote+" - "+dis.LoteProveedor.nombreComercial
                    td= dis.DepositoNacional.idDepNac+" - "+dis.DepositoNacional.nombre
                    td= dis.cantidadDeVacunas
                    td= dis.fechaDeAdquisicion
                    td(style="display: flex;")
                        if dis.LoteProveedor.vencidas
                            form(action=`/distribucion/distribucionDepoNac/consultar/${dis.idTrasladoDep}`, method="get")
                                input.btn.btn-primary(type="submit", value="Consultar")
                            form(action=`/distribucion/distribucionDepoNac/eliminar/${dis.idTrasladoDep}?_method=DELETE`, method="post")
                                input.btn.btn-danger(type="submit", value="Eliminar")
                        else
                            form(action=`/distribucion/distribucionDepoNac/consultar/${dis.idTrasladoDep}`, method="get")
                                input.btn.btn-primary(type="submit", value="Consultar")
                            form(action=`/distribucion/distribucionDepoNac/editar/${dis.idTrasladoDep}`, method="get")
                                input.btn.btn-secondary(type="submit", value="Editar")
                            form(action=`/distribucion/distribucionDepoNac/eliminar/${dis.idTrasladoDep}?_method=DELETE`, method="post")
                                input.btn.btn-danger(type="submit", value="Eliminar")
                            