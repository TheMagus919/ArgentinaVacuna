extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/distribucion/distribucionDepoNac/solicitudes")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center REGISTRAR ENVIO DE VACUNAS
        .container
            form.form(action=`/distribucion/distribucionDepoNac/enviarVacunas/${solicitud.idDisDep}?_method=PUT` method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="idDepNac") DEPOSITO NACIONAL:
                            input.form-control(type="text" name="idDepNac" id="idDepNac" value=`${solicitud.DepositoNacional.idDepNac} - ${solicitud.DepositoNacional.nombre}` readonly)
                        .form-group
                            label(for="nroLote") LOTE:
                            input.form-control(type="text" name="nroLote" id="nroLote" value=`${solicitud.LoteProveedor.nroLote} - ${solicitud.LoteProveedor.nombreComercial}` readonly)
                        .form-group
                            label(for="cantidadDeVacunas") CANTIDAD DE VACUNAS:
                            input.form-control(type="number" name="cantidadDeVacunas" id="cantidadDeVacunas" value=`${solicitud.cantidadDeVacunas}` readonly)
                    .col-md-5
                        .form-group
                            label(for="idDepProv") DEPOSITO PROVINCIAL:
                            input.form-control(type="text" name="idDepProv" id="idDepProv" value=`${solicitud.DepositoProvincial.idDepProv} - ${solicitud.DepositoProvincial.nombre}` readonly)
                        .form-group
                            label(for="fechaDeSalidaDepNac") FECHA DE SALIDA:
                            input.form-control(type="date" name="fechaDeSalidaDepNac" id="fechaDeSalidaDepNac" min=`${fecha.fechaDeAdquisicion}` max=`${solicitud.LoteProveedor.fechaDeVencimiento}` required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")