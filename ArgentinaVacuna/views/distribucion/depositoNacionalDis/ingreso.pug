extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center REGISTRAR INGRESO ID: #{ingreso.idTrasladoDep}
        .container
            form.form(action="?_method=PUT" method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="nroLote") LOTE:
                            input.form-control(type="text" name="nroLote" id="nroLote" value=`${ingreso.nroLote} - ${ingreso.LoteProveedor.nombreComercial}` readonly)
                        .form-group
                            label(for="idDepNac") DEPOSITO NACIONAL:
                            input.form-control(type="text" name="idDepNac" id="idDepNac" value=`${ingreso.idDepNac} - ${ingreso.DepositoNacional.nombre}` readonly)
                    .col-md-5
                        .form-group
                            label(for="fechaDeCompra") FECHA DE COMPRA:
                            input.form-control(type="date" name="fechaDeCompra" id="fechaDeCompra" value=`${ingreso.fechaDeCompra}` readonly)
                        .form-group
                            label(for="fechaDeAdquisicion") FECHA DE ADQUISICION:
                            input.form-control(type="date" name="fechaDeAdquisicion" id="fechaDeAdquisicion" min=`${ingreso.fechaDeCompra}` max=`${ingreso.LoteProveedor.fechaDeVencimiento}` required)
                        .form-group
                            label(for="")
                            input.form-control.btn.btn-light(type="submit", value="Guardar")