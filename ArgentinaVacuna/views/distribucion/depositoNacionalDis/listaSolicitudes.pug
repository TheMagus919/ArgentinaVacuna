extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h2 Listado de Solicitudes Pendientes.
    p Selecciona una para enviar las Vacunas correspondientes.
    table.table#tabla
        thead
            tr
                th ID
                th DEPOSITO NACIONAL
                th LOTE PROVEEDOR
                th DEPOSITO PROVINCIAL
                th CANTIDAD DE VACUNAS
                th OPCIONES
        tbody
            each solicitud in solicitudes
                tr
                    td= solicitud.idDisDep
                    td= solicitud.DepositoNacional.idDepNac+" - "+solicitud.DepositoNacional.nombre
                    td= solicitud.nroLote+" - "+solicitud.LoteProveedor.nombreComercial
                    td= solicitud.DepositoProvincial.idDepProv+" - "+solicitud.DepositoProvincial.nombre
                    td= solicitud.cantidadDeVacunas
                    td
                        form(action=`/distribucion/distribucionDepoNac/enviarVacunas/${solicitud.idDisDep}`, method="get")
                            input.btn.btn-primary(type="submit", value="Seleccionar")