extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center EDITAR DISTRIBUCION DEPOSITO NACIONAL ID: #{traslado.idTrasladoDep}
        .container
            form.form(action="?_method=PUT" method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="nroLote") LOTE:
                            input.form-control(type="text" name="nroLote" id="nroLote" value=`${traslado.nroLote} - ${traslado.LoteProveedor.nombreComercial}` readonly)
                        .form-group
                            label(for="cantidadDeVacunas") CANTIDAD DE VACUNAS:
                            input.form-control(type="number" name="cantidadDeVacunas" id="cantidadDeVacunas" min="1" max=`${cantidad}` value=`${traslado.cantidadDeVacunas}` required)
                    .col-md-5
                        .form-group
                            label(for="idDepNac") DEPOSITO NACIONAL:
                            select.form-control(name="idDepNac" id="idDepNac" required)
                                each dep in depositos
                                    option(value=`${dep.idDepNac}` selected=`${dep.idDepNac}`===`${traslado.idDepNac}`) #{dep.idDepNac}  - #{dep.nombre}
                        .form-group
                            label(for="fechaDeAdquisicion") FECHA DE ADQUISICION:
                            input.form-control(type="date" name="fechaDeAdquisicion" id="fechaDeAdquisicion" value=`${traslado.fechaDeAdquisicion}` required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")