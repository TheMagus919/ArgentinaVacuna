extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center DISTRIBUIR VACUNAS A DEPOSITO PROVINCIAL:
        .container
            form.form(action=`${traslado.idTrasladoDep}` method="post")
                .row.justify-content-evenly
                    .col-md-5
                        .form-group
                            label(for="nroLote") LOTE:
                            input.form-control(type="text" name="nroLote" id="nroLote" value=`${traslado.nroLote} - ${traslado.LoteProveedor.nombreComercial}` readonly)
                        .form-group
                            label(for="idDepNac") DEPOSITO NACIONAL:
                            input.form-control(type="text" name="idDepNac" id="idDepNac" value=`${traslado.idDepNac} - ${traslado.DepositoNacional.nombre}` readonly)
                        .form-group
                            label(for="cantidadDeVacunas") CANTIDAD DE VACUNAS:
                            input.form-control(type="number" name="cantidadDeVacunas" id="cantidadDeVacunas" min="1" max=`${traslado.cantidadDeVacunas}` placeholder=`Valores entre 1 y ${traslado.cantidadDeVacunas}` required)
                    .col-md-4
                        .form-group
                            label(for="idDepProv") DEPOSITO PROVINCIAL:
                            select.form-control(name="idDepProv" id="idDepProv" required)
                                each depo in depositos
                                    option(value=`${depo.idDepProv}`) #{depo.idDepProv} - #{depo.nombre}
                        .form-group
                            label(for="fechaDeSalidaDepNac") FECHA DE SALIDA:
                            input.form-control(type="date" name="fechaDeSalidaDepNac" id="fechaDeSalidaDepNac" min=`${traslado.fechaDeAdquisicion}` max=`${traslado.LoteProveedor.fechaDeVencimiento}` required)
                        .form-group
                            label(for="")
                            input.form-control.btn.btn-light(type="submit", value="Guardar")