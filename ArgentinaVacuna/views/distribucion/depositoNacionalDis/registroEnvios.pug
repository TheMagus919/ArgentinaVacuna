extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/distribucion/distribucionDepoNac")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h2 REGISTRO DE ENVIOS:
    table.table#tabla
        thead
            tr
                th DEPOSITO NACIONAL
                th LOTE PROVEEDOR
                th DEPOSITO PROVINCIAL
                th CANTIDAD VACUNAS
                th FECHA DE SALIDA
                th FECHA DE LLEGADA
                th OPCIONES

        tbody
            each envio in listaEnvios
                tr
                    td= envio.DepositoNacional.idDepNac+" - "+envio.DepositoNacional.nombre
                    td= envio.LoteProveedor.nroLote+" - "+envio.LoteProveedor.nombreComercial
                    td= envio.DepositoProvincial.idDepProv+" - "+envio.DepositoProvincial.nombre
                    td= envio.cantidadDeVacunas
                    td= envio.fechaDeSalidaDepNac
                    td= envio.fechaLlegadaDepProv
                    td(style="display: flex;")
                        form(action=`/distribucion/distribucionDepoNac/consultarEnvio/${envio.idDisDep}`, method="get")
                                input.btn.btn-primary(type="submit", value="Consultar")