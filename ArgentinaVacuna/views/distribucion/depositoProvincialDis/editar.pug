extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center EDITAR DISTRIBUCION DEPOSITO PROVINCIAL ID: #{distri.idDisDep}
        .container
            form.form(action="?_method=PUT" method="post")
                .row.justify-content-between
                    .col-md-6
                        .form-group
                            label(for="idDepNac") DEPOSITO NACIONAL QUE ENVIA:
                            input.form-control(type="text" name="idDepNac" id="idDepNac" value=`${distri.DepositoNacional.idDepNac} - ${distri.DepositoNacional.nombre}` readonly)
                        .form-group
                            label(for="nroLote") LOTE:
                            input.form-control(type="text" name="nroLote" id="nroLote" value=`${distri.LoteProveedor.nroLote} - ${distri.LoteProveedor.nombreComercial}` readonly)
                        .form-group
                            label(for="cantidadDeVacunas") CANTIDAD DE VACUNAS:
                            input.form-control(type="number" name="cantidadDeVacunas" id="cantidadDeVacunas" min="1" max=`${cantidad.cantidadDeVacunas}` value=`${distri.cantidadDeVacunas}` required)
                    .col-md-6
                        .form-group
                            label(for="idDepProv") DEPOSITO PROVINCIAL RECIBE:
                            select.form-control(name="idDepProv" id="idDepProv" required)
                                each dep in depositos
                                    option(value=`${dep.idDepProv}` selected=`${dep.idDepProv}`===`${distri.idDepProv}`) #{dep.idDepProv}  - #{dep.nombre}
                        .form-group
                            label(for="fechaDeSalidaDepNac") FECHA DE SALIDA:
                            input.form-control(type="date" name="fechaDeSalidaDepNac" id="fechaDeSalidaDepNac" value=`${distri.fechaDeSalidaDepNac}` required)
                        .form-group
                            label(for="fechaLlegadaDepProv") FECHA DE LLEGADA:
                            input.form-control(type="date" name="fechaLlegadaDepProv" id="fechaLlegadaDepProv" value=`${distri.fechaLlegadaDepProv}` required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")