extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/distribucion")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
        h5
            form(action=`/distribucion/distribucionDepoPro/depositos`, method="get")
                input(type="submit", value="Añadir Registro Distribucion Deposito Provincial")
    table.table#tabla
        thead
            tr
                th ID
                th DEPOSITO NACIONAL QUE ENVIA
                th LOTE PROVEEDOR
                th DEPOSITO PROVINCIAL QUE RECIBE
                th CANTIDAD VACUNAS
                th FECHA SALIDA
                th FECHA LLEGADA
                th OPCIONES
        tbody
            each dis in listaDeDistribucion
                tr
                    td= dis.idDisDep
                    td= dis.DepositoNacional.idDepNac+" - "+dis.DepositoNacional.nombre
                    td= dis.LoteProveedor.nroLote+" - "+dis.LoteProveedor.nombreComercial
                    td= dis.DepositoProvincial.idDepProv+" - "+dis.DepositoProvincial.nombre
                    td= dis.cantidadDeVacunas
                    td= dis.fechaDeSalidaDepNac
                    td= dis.fechaLlegadaDepProv
                    td(style="display: flex;")
                        if dis.LoteProveedor.vencidas
                            form(action=`/distribucion/distribucionDepoPro/consultar/${dis.idDisDep}`, method="get")
                                input.btn.btn-primary(type="submit", value="Consultar")
                            form(action=`/distribucion/distribucionDepoPro/eliminar/${dis.idDisDep}?_method=DELETE`, method="post")
                                input.btn.btn-danger(type="submit", value="Eliminar")
                        else
                            form(action=`/distribucion/distribucionDepoPro/consultar/${dis.idDisDep}`, method="get")
                                input.btn.btn-primary(type="submit", value="Consultar")
                            form(action=`/distribucion/distribucionDepoPro/editar/${dis.idDisDep}`, method="get")
                                input.btn.btn-secondary(type="submit", value="Editar")
                            form(action=`/distribucion/distribucionDepoPro/eliminar/${dis.idDisDep}?_method=DELETE`, method="post")
                                input.btn.btn-danger(type="submit", value="Eliminar")
                                
                            
                            