extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h2 Listado de Solicitudes pendientes.
    p Seleccione una para realizar el envio.
    table.table#tabla
        thead
            tr
                th DEPOSITO PROVINCIAL
                th LOTE PROVEEDOR
                th CENTRO DE VACUNACION 
                th CANTIDAD DE VACUNAS
                th OPCIONES
        tbody
            each solicitud in solicitudes
                tr
                    td= solicitud.DepositoProvincial.idDepProv +" - "+ solicitud.DepositoProvincial.nombre
                    td= solicitud.LoteProveedor.nroLote +" - "+ solicitud.LoteProveedor.nombreComercial
                    td= solicitud.DistribucionCentroVac.idCentro +" - "+ solicitud.DistribucionCentroVac.nombre
                    td= solicitud.cantidadDeVacunas
                    td 
                        form(action=`/distribucion/distribucionDepoPro/enviarVacunasSolicitadas/${solicitud.idDisCentro}`, method="get")
                            input.btn.btn-primary(type="submit", value="Seleccionar")