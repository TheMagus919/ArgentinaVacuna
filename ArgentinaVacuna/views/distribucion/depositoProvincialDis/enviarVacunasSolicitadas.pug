extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center ENVIAR VACUNAS SOLICITADAS
        .container
            form.form(action="?_method=PUT" method="post")
                .row.justify-content-between
                    .col-md-6
                        .form-group
                            label(for="idDepProv") DEPOSITO PROVINCIAL:
                            input.form-control(type="text" name="idDepProv" id="idDepProv" value=`${solicitud.DepositoProvincial.idDepProv} - ${solicitud.DepositoProvincial.nombre}` readonly)
                        .form-group
                            label(for="nroLote") LOTE:
                            input.form-control(type="text" name="nroLote" id="nroLote" value=`${solicitud.LoteProveedor.nroLote} - ${solicitud.LoteProveedor.nombreComercial}` readonly)
                        .form-group
                            label(for="cantidadDeVacunas") CANTIDAD DE VACUNAS:
                            input.form-control(type="number" name="cantidadDeVacunas" id="cantidadDeVacunas" value=`${solicitud.cantidadDeVacunas}` readonly)
                    .col-md-6
                        .form-group
                            label(for="idCentro") CENTRO DE VACUNACION:
                            input.form-control(type="text" name="idCentro" id="idCentro" value=`${solicitud.DistribucionCentroVac.idCentro} - ${solicitud.DistribucionCentroVac.nombre}` readonly)
                        .form-group
                            label(for="fechaDeSalidaDepProv") FECHA DE SALIDA:
                            input.form-control(type="date" name="fechaDeSalidaDepProv" id="fechaDeSalidaDepProv" min=`${fecha.fechaLlegadaDepProv}` max=`${solicitud.LoteProveedor.fechaDeVencimiento}` required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")