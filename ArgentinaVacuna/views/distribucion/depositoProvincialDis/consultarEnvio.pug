extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/distribucion/distribucionDepoPro/distribucionesEnProceso")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .consulta
        h1 DISTRIBUCION A CENTRO DE VACUNACION ID: #{envio.idDisCentro}.
        .contenido
            h4 DEPOSITO PROVINCIAL:
            ol
                li ID: #{envio.idDepProv}
                li NOMBRE: #{envio.DepositoProvincial.nombre}
                li PROVINCIA: #{envio.DepositoProvincial.provincia}
                li LOCALIDAD: #{envio.DepositoProvincial.localidad}
                li DIRECCION: #{envio.DepositoProvincial.direccion}
        .contenido
            h4 LOTE PROVEEDOR:
            ol 
                li ID: #{envio.nroLote}
                li NOMBRE COMERCIAL: #{envio.LoteProveedor.nombreComercial}
                li CANTIDAD DE VACUNAS QUE CONTIENE: #{envio.LoteProveedor.cantidadDeVacunas}
                li TIPO DE FRASCO: #{envio.LoteProveedor.tipoDeFrasco}
                li TIPO DE VACUNA: #{envio.LoteProveedor.TipoVacuna.nombre}
                li LABORATORIO: #{envio.LoteProveedor.Laboratorio.nombre}
                li FECHA FABRICACION: #{envio.LoteProveedor.fechaDeFabricacion}
                li FECHA VENCIMIENTO: #{envio.LoteProveedor.fechaDeVencimiento}
                if envio.LoteProveedor.vencidas
                    li VENCIDAS: SI
        .contenido
            h4 CENTRO DE VACUNACION: 
            ol
                li ID: #{envio.idCentro}
                li NOMBRE: #{envio.DistribucionCentroVac.nombre}
                li PROVINCIA: #{envio.DistribucionCentroVac.provincia}
                li LOCALIDAD: #{envio.DistribucionCentroVac.localidad}
                li DIRECCION: #{envio.DistribucionCentroVac.direccion}
        .contenido
            h4 CANTIDAD DE VACUNAS QUE SE ENVIAN: #{envio.cantidadDeVacunas}
            h4 FECHA DE SALIDA: #{envio.fechaDeSalidaDepProv}
            if envio.fechaLlegadaCentro == null 
                h4 FECHA DE LLEGADA: En Proceso
            else 
                h4 FECHA DE LLEGADA: #{envio.fechaLlegadaCentro}