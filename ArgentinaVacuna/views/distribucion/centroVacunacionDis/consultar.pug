extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .consulta
        h1 DISTRIBUCION CENTRO DE VACUNACION ID: #{distri.idDisCentro}.
        .contenido
            h4 DEPOSITO PROVINCIAL:
            ol
                li ID: #{distri.idDepProv}
                li NOMBRE: #{distri.DepositoProvincial.nombre}
                li PROVINCIA: #{distri.DepositoProvincial.provincia}
                li LOCALIDAD: #{distri.DepositoProvincial.localidad}
                li DIRECCION: #{distri.DepositoProvincial.direccion}
        .contenido
            h4 LOTE PROVEEDOR:
            ol 
                li ID: #{distri.nroLote}
                li NOMBRE COMERCIAL: #{distri.LoteProveedor.nombreComercial}
                li CANTIDAD DE VACUNAS QUE CONTIENE: #{distri.LoteProveedor.cantidadDeVacunas}
                li TIPO DE FRASCO: #{distri.LoteProveedor.tipoDeFrasco}
                li TIPO DE VACUNA: #{distri.LoteProveedor.TipoVacuna.nombre}
                li LABORATORIO: #{distri.LoteProveedor.Laboratorio.nombre}
                li FECHA FABRICACION: #{distri.LoteProveedor.fechaDeFabricacion}
                li FECHA VENCIMIENTO: #{distri.LoteProveedor.fechaDeVencimiento}
                if distri.LoteProveedor.vencidas
                    li VENCIDAS: SI
        .contenido
            h4 CENTRO DE VACUNACION: 
            ol
                li ID: #{distri.idCentro}
                li NOMBRE: #{distri.DistribucionCentroVac.nombre}
                li PROVINCIA: #{distri.DistribucionCentroVac.provincia}
                li LOCALIDAD: #{distri.DistribucionCentroVac.localidad}
                li DIRECCION: #{distri.DistribucionCentroVac.direccion}
        .contenido
            h4 CANTIDAD DE VACUNAS QUE SE ENVIAN: #{distri.cantidadDeVacunas}
            if distri.fechaDeSalidaDepProv==null 
                h4 FECHA DE SALIDA: En Proceso
            else
                h4 FECHA DE SALIDA: #{distri.fechaDeSalidaDepProv}
            if distri.fechaLlegadaCentro==null 
                h4 FECHA DE LLEGADA: En Proceso
            else
                h4 FECHA DE LLEGADA: #{distri.fechaLlegadaCentro}