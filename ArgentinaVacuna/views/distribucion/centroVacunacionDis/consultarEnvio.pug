extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .consulta
        h1 REGISTRO DE ENVIO ID: #{distri.idTraslado}.
        .contenido
            h4 CENTRO DE VACUNACION ENVIA:
            ol
                li ID: #{distri.idCentroEnvia}
                li NOMBRE: #{distri.centroEnvia.nombre}
                li PROVINCIA: #{distri.centroEnvia.provincia}
                li LOCALIDAD: #{distri.centroEnvia.localidad}
                li DIRECCION: #{distri.centroEnvia.direccion}
        .contenido
            h4 LOTE PROVEEDOR:
            ol 
                li ID: #{distri.nroLote}
                li NOMBRE COMERCIAL: #{distri.LoteProveedor.nombreComercial}
                li CANTIDAD DE VACUNAS QUE CONTIENE: #{distri.LoteProveedor.cantidadDeVacunas}
                li TIPO DE FRASCO: #{distri.LoteProveedor.tipoDeFrasco}
                li TIPO DE VACUNA: #{distri.LoteProveedor.TipoVacuna.nombre}
                li LABORATORIO: #{distri.LoteProveedor.Laboratorio.nombre}
                li FECHA FABRICACION: #{distri.LoteProveedor.fechaDeFabricacion}
                li FECHA VENCIMIENTO: #{distri.LoteProveedor.fechaDeVencimiento}
        .contenido
            h4 CENTRO DE VACUNACION RECIBE: 
            ol
                li ID: #{distri.idCentroRecibe}
                li NOMBRE: #{distri.centroRecibe.nombre}
                li PROVINCIA: #{distri.centroRecibe.provincia}
                li LOCALIDAD: #{distri.centroRecibe.localidad}
                li DIRECCION: #{distri.centroRecibe.direccion}
        .contenido
            h4 CANTIDAD DE VACUNAS QUE SE ENVIAN: #{distri.cantidadDeVacunas}
            h4 FECHA DE SALIDA: #{distri.fechaSalida}
            h4 FECHA DE LLEGADA: #{distri.fechaLlegada}