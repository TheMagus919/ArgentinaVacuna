extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/distribucion/distribucionCentroVac")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h2 REGISTRO DE ENVIOS:
    table.table#tabla
        thead
            tr
                th CENTRO DE VACUNACION ENVIA
                th LOTE PROVEEDOR
                th CENTRO DE VACUNACION RECIBE
                th CANTIDAD VACUNAS
                th FECHA DE SALIDA
                th FECHA DE LLEGADA
                th OPCIONES

        tbody
            each envio in listaEnvios
                tr
                    td= envio.centroEnvia.idCentro+" - "+envio.centroEnvia.nombre
                    td= envio.LoteProveedor.nroLote+" - "+envio.LoteProveedor.nombreComercial
                    td= envio.centroRecibe.idCentro+" - "+envio.centroRecibe.nombre
                    td= envio.cantidadDeVacunas
                    td= envio.fechaSalida
                    td= envio.fechaLlegada
                    td(style="display: flex;")
                        form(action=`/distribucion/distribucionCentroVac/consultarEnvio/${envio.idTraslado}`, method="get")
                                input.btn.btn-primary(type="submit", value="Consultar")