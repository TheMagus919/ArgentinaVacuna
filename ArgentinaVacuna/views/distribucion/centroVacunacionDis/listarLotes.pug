extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/distribucion/distribucionCentroVac/depositos")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h2 Listado de Lotes.
    P Selecciona el Lote para Distribuirlo al Centro de Vacunacion.
    table.table#tabla
        thead
            tr
                th NUMERO DE LOTE
                th NOMBRE COMERCIAL
                th TIPO VACUNA
                th CANTIDAD DE VACUNAS
                th OPCIONES
        tbody
            each lote in listaDeLotes
                tr
                    td= lote.LoteProveedor.nroLote
                    td= lote.LoteProveedor.nombreComercial
                    td= lote.LoteProveedor.TipoVacuna.nombre
                    td= lote.get('cantidadTotalVacunas')
                    td 
                        form(action=`/distribucion/distribucionCentroVac/crear/${lote.DepositoProvincial.idDepProv}/${lote.LoteProveedor.nroLote}`, method="get")
                            input.btn.btn-primary(type="submit", value="Seleccionar")