extends ../../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h2 Listado de Lotes.
    P Selecciona el Lote que sera trasladado al Centro de Vacunacion.
    table.table#tabla
        thead
            tr
                th ID LOTE PROVEEDOR
                th NOMBRE COMERCIAL
                th TIPO VACUNA
                th CANTIDAD DE VACUNAS
                th OPCIONES
        tbody
            each lote in listaDeLotes
                tr
                    td= lote.nroLote
                    td= lote.LoteProveedor.nombreComercial
                    td= lote.LoteProveedor.TipoVacuna.nombre
                    td= lote.cantidadDeVacunas
                    td 
                        form(action=`/distribucion/distribucionCentroVac/crear/${lote.idDepProv}${lote.nroLote}`, method="get")
                            input.btn.btn-primary(type="submit", value="Seleccionar")