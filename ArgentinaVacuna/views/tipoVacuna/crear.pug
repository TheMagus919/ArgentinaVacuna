extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center AÑADIR NUEVO TIPO DE VACUNA
        .container
            form.form(action="alta" method="post")
                .row.justify-content-center
                    .col-md-5
                        .form-group
                            label(for="nombre") NOMBRE:
                            input.form-control(type="text" name="nombre" id="nombre" placeholder="Ingresar Nombre" required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")