extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center CANTIDAD DE PERSONAS QUE SE VACUNARON
        .container
            form.form(action="/aplicacion/listaPacientes/listar" method="post")
                .row.justify-content-between
                    .col-md-6
                        .form-group
                            label(for="nombre") TIPO DE VACUNA:
                            select.form-control(name="nombre" id="nombre" required)
                                each vac in listaVacuna
                                    option(value=`${vac.nombre}`) #{vac.nombre}
                        .form-group
                            label(for="provincia") PROVINCIA:
                            select.form-control(name="provincia" id="provincia" required)
                                each centro in listaProv
                                    option(value=`${centro.provincia}`) #{centro.provincia}
                    .col-md-5
                        .form-group
                            label(for="localidad") LOCALIDAD:
                            select.form-control(name="localidad" id="localidad" required)
                                each centro in listaLoc
                                    option(value=`${centro.localidad}`) #{centro.localidad}
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")