extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    h4 STOCK DISPONIBLE:
    table.table#tabla
        thead
            tr
                th NRO LOTE
                th NOMBRE COMERCIAL
                th CENTRO DE VACUNACION
                th CANTIDAD DE VACUNAS
                th TIPO DE VACUNA
        tbody
            each item in stock
                tr
                    td= item.nroLote
                    td= item.nombreComercial
                    if item.DistribucionCentros.length > 0
                        td= item.DistribucionCentros[0].DistribucionCentroVac.nombre
                    else 
                        td= item.Traslados[0].centroRecibe.nombre
                    td= item.dataValues.cantidad_total
                    td= item.TipoVacuna.nombre

