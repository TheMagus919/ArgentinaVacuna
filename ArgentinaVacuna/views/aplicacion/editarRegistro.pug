extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center EDITAR REGISTRO DE APLICACION ID: #{ap.idAplicacion}
        .container
            form.form(action="?_method=PUT" method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="dniPaciente") PACIENTE:
                            select.form-control(name="dniPaciente" id="dniPaciente" required)
                                each pac in listPacientes
                                    option(value=`${pac.dniPaciente}` selected=`${pac.dniPaciente}`===`${ap.dniPaciente}`) #{pac.nombre} #{pac.apellido} - #{pac.dniPaciente}
                        .form-group
                            label(for="dniAgente") AGENTE DE SALUD:
                            select.form-control(name="dniAgente" id="dniAgente" required)
                                each ag in listAgentes
                                    option(value=`${ag.dniAgente}` selected=`${ag.dniAgente}`===`${ap.dniAgente}`) #{ag.nombre} #{ag.apellido} - #{ag.dniAgente}
                        .form-group
                            label(for="nroLote") NUMERO DE LOTE PROVEEDOR:
                            select.form-control(name="nroLote" id="nroLote" required)
                                each lote in listaLote
                                    option(value=`${lote.LoteProveedor.nroLote}` selected=`${lote.LoteProveedor.nroLote}`===`${ap.nroLote}`) #{lote.LoteProveedor.nroLote} - #{lote.LoteProveedor.nombreComercial}
                    .col-md-5
                        .form-group
                            label(for="fechaDeAplicacion") FECHA DE APLICACION:
                            input.form-control(type="date" name="fechaDeAplicacion" id="fechaDeAplicacion" value=`${ap.fechaDeAplicacion}` required)
                        .form-group
                            label(for="idCentro") CENTRO DE VACUNACION:
                            input.form-control(name="idCentro" id="idCentro" value=`${centros.idCentro} - ${centros.nombre}` readonly)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")