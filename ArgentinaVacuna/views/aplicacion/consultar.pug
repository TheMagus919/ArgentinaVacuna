extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .consulta
        h1 APLICACION ID: #{informacion.idAplicacion}.
        .contenido
            h4 PACIENTE:
            ol
                li NOMBRE COMPLETO: #{informacion.Paciente.nombre} #{informacion.Paciente.apellido}
                li DNI: #{informacion.Paciente.dniPaciente}
                li EDAD: #{edad}
                li GENERO: #{informacion.Paciente.genero}
                li LOCALIDAD: #{informacion.Paciente.localidad}
                li NUMERO DE TELEFONO: #{informacion.Paciente.celular}
        .contenido
            h4 AGENTE DE SALUD:
            ol
                li NOMBRE COMPLETO: #{informacion.AgenteDeSalud.nombre} #{informacion.AgenteDeSalud.apellido}
                li DNI: #{informacion.AgenteDeSalud.dniAgente}
                li PROVINCIA: #{informacion.AgenteDeSalud.provincia}
                li MATRICULA: #{informacion.AgenteDeSalud.matricula}
        .contenido
            h4 LOTE PROVEEDOR:
            ol 
                li ID: #{informacion.nroLote}
                li NOMBRE COMERCIAL: #{informacion.LoteProveedor.nombreComercial}
                li TIPO DE FRASCO: #{informacion.LoteProveedor.tipoDeFrasco}
                li TIPO DE VACUNA: #{informacion.LoteProveedor.TipoVacuna.nombre}
                li LABORATORIO: #{informacion.LoteProveedor.Laboratorio.nombre}
                li FECHA VENCIMIENTO: #{informacion.LoteProveedor.fechaDeVencimiento}
        .contenido
            h4 CENTRO DE VACUNACION: 
            ol
                li NOMBRE: #{informacion.CentroDeVacunacion.nombre}
                li PROVINCIA: #{informacion.CentroDeVacunacion.provincia}
                li LOCALIDAD: #{informacion.CentroDeVacunacion.localidad}
                li DIRECCION: #{informacion.CentroDeVacunacion.direccion}
        .contenido
            h4 FECHA DE APLICACION: #{informacion.fechaDeAplicacion}