extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center SELECCIONAR UN CENTRO DE VACUNACION
        .container
            form.form(action="crear" method="post")
                .row.justify-content-center
                    .col-md-6
                        .form-group
                            label(for="idCentro") CENTRO DE VACUNACION:
                            select.form-control(name="idCentro" id="idCentro" required)
                                each centro in listaCentros
                                    option(value=`${centro.idCentro}`) #{centro.idCentro} - #{centro.nombre}
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Seleccionar")