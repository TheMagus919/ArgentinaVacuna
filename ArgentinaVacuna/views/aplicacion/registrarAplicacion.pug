extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="./")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center AÑADIR NUEVO REGISTRO DE APLICACION
        .container
            form.form(action="alta" method="post")
                .row.justify-content-around
                    .col-md-4
                        .form-group
                            label(for="dniPaciente") PACIENTE:
                            .add.justify-content-between  
                                input(type="text" name="dniPaciente" id="dniPaciente" required)
                                a.link(href="/aplicacion/crear/paciente" style='color: white; font-family: system-ui; font-weight: bold;') +ADD
                        .form-group
                            label(for="dniAgente") AGENTE DE SALUD:
                            input.form-control(type="text" name="dniAgente" id="dniAgente" value=`${agente.nombre} ${agente.apellido} - ${agente.dniAgente}` readonly)
                        .form-group
                            label(for="nroLote") NUMERO DE LOTE PROVEEDOR:
                            select.form-control(name="nroLote" id="nroLote" required)
                                each lote in listaLote
                                    option(value=`${lote.nroLote}`) #{lote.nroLote} - #{lote.nombreComercial}
                    .col-md-5
                        .form-group
                            label(for="fechaDeAplicacion") FECHA DE APLICACION:
                            input.form-control(type="date" name="fechaDeAplicacion" id="fechaDeAplicacion" required)
                        .form-group
                            label(for="idCentro") CENTRO DE VACUNACION:
                            input.form-control(type="text" name="idCentro" id="idCentro" value=`${centro.idCentro} - ${centro.nombre}` readonly)
                        .form-group
                            label(for="")
                            input.form-control.btn.btn-light(type="submit", value="Guardar")