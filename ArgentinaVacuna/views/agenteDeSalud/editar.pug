extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center EDITAR AGENTE DE SALUD DNI: #{ag.dniAgente}
        .container
            form.form(action="?_method=PUT" method="post")
                .row.justify-content-between
                    .col-md-5
                        .form-group
                            label(for="nombre") NOMBRE:
                            input.form-control(type="text" name="nombre" id="nombre" value=`${ag.nombre}` required)
                        .form-group
                            label(for="apellido") APELLIDO:
                            input.form-control(type="text" name="apellido" id="apellido" value=`${ag.apellido}` required)
                        .form-group
                            label(for="fechaDeNacimiento") FECHA DE NACIMIENTO:
                            input.form-control(type="date" name="fechaDeNacimiento" id="fechaDeNacimiento" value=`${ag.fechaDeNacimiento}` required)
                    .col-md-5
                        .form-group
                            label(for="genero") GENERO:
                            select.form-control(name="genero" id="genero" required)
                                option(value="masculino" selected="masculino"===`${ag.genero}`) Masculino
                                option(value="femenino" selected="femenino"===`${ag.genero}`) Femenino
                        .form-group
                            label(for="mail") MAIL:
                            input.form-control(type="email" name="mail" id="mail" value=`${ag.mail}` required)
                        .form-group
                            label(for="matricula") MATRICULA:
                            input.form-control(type="text" name="matricula" id="matricula" value=`${ag.matricula}` required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")