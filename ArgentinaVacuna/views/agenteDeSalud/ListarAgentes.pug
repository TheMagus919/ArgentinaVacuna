extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
        h5
            form(action=`/agenteDeSalud/crear`, method="get")
                input(type="submit", value="Añadir Nuevo Agente")
    table.table#tabla
        thead
            tr
                th DNI
                th NOMBRE
                th APELLIDO
                th FECHA DE NACIMIENTO
                th GENERO
                th MAIL
                th MATRICULA
                th OPCIONES
        tbody
            each ag in listaDeAgentes
                tr
                    td= ag.dniAgente
                    td= ag.nombre
                    td= ag.apellido
                    td= ag.fechaDeNacimiento
                    td= ag.genero
                    td= ag.mail
                    td= ag.matricula
                    td(style="display: flex;")
                        form(action=`/agenteDeSalud/editar/${ag.dniAgente}`, method="get")
                            input.btn.btn-primary(type="submit", value="Editar")
                        form(action=`/agenteDeSalud/eliminar/${ag.dniAgente}?_method=DELETE`, method="post")
                            input.btn.btn-danger(type="submit", value="Borrar")
