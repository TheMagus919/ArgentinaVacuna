extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center CAMBIAR CONTRASEÑA:
        .container
            form.form(action="/auth/cambiarPassword" method="post")
                .row.justify-content-center
                    .col-md-5
                        .form-group
                            label(for="password") CONTRASEÑA ACTUAL:
                            input.form-control(type="password" name="password" id="password" placeholder="Ingresar Contraseña Actual." required)
                        .form-group
                            label(for="nuevoPassword") NUEVA CONTRASEÑA:
                            input.form-control(type="password" name="nuevoPassword" id="nuevoPassword" placeholder="Ingresar Nueva Contraseña." required)
                        .form-group
                            label(for="repetirPassword") REPETIR CONTRASEÑA:
                            input.form-control(type="password" name="repetirPassword" id="repetirPassword" placeholder="Repetir Contraseña." required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")