extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/auth/registrarse")
            | Registrarse
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center Iniciar Sesión
        .container
            form.form(action="/auth/login" method="post")
                .row.justify-content-center
                    .col-md-5
                        .form-group
                            label(for="mail") CORREO ELECTRONICO:
                            input.form-control(type="email" name="mail" id="mail" placeholder="Ingresar Correo Electronico" required)
                        .form-group
                            label(for="password") CONTRASEÑA:
                            input.form-control(type="password" name="password" id="password" placeholder="Ingresar Contraseña" required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Iniciar Sesión")