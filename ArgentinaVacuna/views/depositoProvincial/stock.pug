extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/depositoProvincial")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .consulta
        h1 STOCK DISPONIBLE:
        if stock.length === 0 
            .contenido
                h4 No hay Stock.
        else 
            each lote in stock
                .contenido
                    h4(style="text-align: center;") NUMERO DE LOTE: #{lote.LoteProveedor.nroLote}
                    ul 
                        li NOMBRE COMERCIAL: #{lote.LoteProveedor.nombreComercial}
                        li CANTIDAD DE VACUNAS: #{lote.cantidadDeVacunas}
                        li TIPO DE VACUNA: #{lote.LoteProveedor.TipoVacuna.nombre}
                        li TIPO DE FRASCO: #{lote.LoteProveedor.tipoDeFrasco}
                        li FECHA DE VENCIMIENTO: #{lote.LoteProveedor.fechaDeVencimiento}
            