extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="/")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
        h5
            form(action=`/depositoProvincial/crear`, method="get")
                input(type="submit", value="Añadir Nuevo Deposito Provincial")
    table.table#tabla
        thead
            tr
                th ID
                th NOMBRE
                th PROVINCIA
                th LOCALIDAD
                th DIRECCION
                th OPCIONES
        tbody
            each depPro in listaDeDepositosProvinciales
                tr
                    td= depPro.idDepProv
                    td= depPro.nombre
                    td= depPro.provincia
                    td= depPro.localidad
                    td= depPro.direccion
                    td(style="display: flex;")
                        form(action=`/depositoProvincial/editar/${depPro.idDepProv}`, method="get")
                            input.btn.btn-primary(type="submit", value="Editar")
                        form(action=`/depositoProvincial/eliminar/${depPro.idDepProv}?_method=DELETE`, method="post")
                            input.btn.btn-danger(type="submit", value="Borrar")
