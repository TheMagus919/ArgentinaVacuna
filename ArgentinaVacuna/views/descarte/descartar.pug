extends ../layout.pug

block content
    .contenedorVolverCrear
        a.link(href="../")
            | Volver Atrás
            img(src='/images/volver.png', alt="Flecha hacia atrás")
    .formulario
        h1.text-center REALIZAR DESCARTE
        .container
            form.form(action="alta" method="post")
                .row.justify-content-between
                    .col-md-6
                        .form-group
                            label(for="dniAgente") DNI AGENTE RESPONSABLE:
                            input.form-control(type="number" name="dniAgente" id="dniAgente" placeholder="Ingresar DNI de Agente" required)
                        .form-group
                            label(for="nroLote") NUMERO DE LOTE:
                            input.form-control(type="number" name="nroLote" id="nroLote" placeholder="Ingresar NRO Lote" required)
                        .form-group
                            label(for="formaDescarte") FORMA DE DESCARTE:
                            input.form-control(type="text" name="formaDescarte" id="formaDescarte" placeholder="Ingresar Forma en que se Descarto" required)
                    .col-md-6
                        .form-group
                            label(for="empresaResponsable") EMPRESA RESPONSABLE:
                            input.form-control(type="text" name="empresaResponsable" id="empresaResponsable" placeholder="Ingresar Empresa Responsable" required)
                        .form-group
                            label(for="motivo") MOTIVO
                            input.form-control(type="text" name="motivo" id="motivo" placeholder="Ingresar Motivo" required)
                        .form-group
                            label(for="fechaDeDescarte") FECHA DE DESCARTE:
                            input.form-control(type="date" name="fechaDeDescarte" id="fechaDeDescarte" required)
                        .form-group
                            input.form-control.btn.btn-light(type="submit", value="Guardar")